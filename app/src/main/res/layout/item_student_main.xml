<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        app:cardElevation="0dp">

    <LinearLayout
            android:id="@+id/llStudentItems"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tvStudentName"
                style="@style/TableRowStyle"
                android:layout_width="45dp"
                android:layout_column="0"
                android:layout_weight="1"
                android:background="@color/white"
                android:textSize="@dimen/TextFont6"
                android:text="Student Name"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />

        <TextView
                android:id="@+id/tvStudentNumber"
                style="@style/TableRowStyle"

                android:layout_width="45dp"
                android:layout_column="0"
                android:layout_weight="1"
                android:background="@color/white"
                android:layout_gravity="center"
                android:textSize="@dimen/TextFont6"
                android:text="Student Number"
                android:layout_height="wrap_content" />

        <ImageView
                android:id="@+id/ivGraded"
                style="@style/TableRowStyle"
                android:layout_width="24dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:scaleType="fitStart"
                android:src="@drawable/baseline_check_box_outline_blank_24"
                android:layout_height="45dp" />

        <Button
                android:text="Grade"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnChangeGrade"
                android:layout_weight="1"
                android:textSize="@dimen/TextFont6"
                android:backgroundTint="#028577"
                android:textColor="#FFFFFF" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
