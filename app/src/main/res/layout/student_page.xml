<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        tools:context=".pages.PracticeMainActivity">

    <!-- Profile Image -->
    <ImageButton
            android:id="@+id/ibProfileImg"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/baseline_catching_pokemon_24"
            android:contentDescription="@string/profile_img"
            android:onClick="onImageButtonClick"
            android:background="@drawable/circle_background"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toTopOf="@+id/guideline4" />

    <!-- Floating Action Button Menu -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:clickable="true"
            app:srcCompat="@drawable/baseline_menu_24"
            android:id="@+id/fabMenu"
            app:layout_constraintTop_toTopOf="@+id/guideline4"
            app:layout_constraintEnd_toStartOf="@+id/guideline3" />

    <!--  Guidelines  -->
    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline2"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.04" />

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline3"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.93" />

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline4"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.02" />

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline5"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.94" />

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline7"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.50364965" />

    <!-- CourseName -->
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:id="@+id/tvCourseName"
            app:layout_constraintTop_toBottomOf="@+id/ibProfileImg"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            android:layout_marginTop="30dp" />

    <!--  Student Number Field  -->
<!--    <EditText-->
<!--            android:layout_width="165dp"-->
<!--            android:layout_height="48dp"-->
<!--            android:ems="10"-->
<!--            android:id="@+id/etStudentNumberField"-->
<!--            android:hint="Search by student number"-->
<!--            android:textSize="@dimen/_10ssp"-->
<!--            app:layout_constraintStart_toStartOf="@+id/guideline2"-->
<!--            app:layout_constraintTop_toBottomOf="@+id/tvCourseName"-->
<!--            android:layout_marginTop="20dp"-->
<!--            android:inputType="number" />-->

    <androidx.appcompat.widget.SearchView
            android:layout_width="165dp"
            android:layout_height="48dp"
            android:ems="10"
            android:id="@+id/searchView"
            android:inputType="number"

            app:iconifiedByDefault="false"
            app:searchHintIcon="@null"
            android:focusable="false"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/tvCourseName"
            android:layout_marginTop="20dp"
            app:queryHint="Search by number..." />
    <!-- FilterBy Spinner  -->

    <!-- Export Grades Button -->

    <!-- Scan Excel Sheet Button -->


    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spnrFilterBy"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            android:textAlignment="textEnd"
            android:layout_marginBottom="14dp"
            app:layout_constraintBottom_toTopOf="@+id/llStudents"
            app:layout_constraintTop_toBottomOf="@+id/fabMenu"
            app:layout_constraintVertical_bias="0.852" />

    <Button
            android:text="Export Grades"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnExportGrades"
            android:backgroundTint="#0C0C0C"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="44dp"
            android:layout_marginTop="26dp"
            app:layout_constraintTop_toBottomOf="@+id/recyclerView" />

    <Button
            android:text="Scan Excel Sheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnScanExcelSheet"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="44dp"
            android:layout_marginTop="26dp"
            app:layout_constraintTop_toBottomOf="@+id/recyclerView" />

    <LinearLayout
            android:id="@+id/llStudents"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/tvCourseName"
            android:layout_marginTop="75dp">

        <TextView
                android:id="@+id/tvTitleOne"
                style="@style/TableRowStyle"
                android:layout_width="wrap_content"
                android:layout_column="0"
                android:layout_weight="1"
                android:background="@color/white"
                android:textAlignment="textStart"
                android:textSize="@dimen/_10ssp"
                android:text="Student Name"
                app:layout_constraintStart_toStartOf="@+id/guideline2"
                app:layout_constraintTop_toBottomOf="@+id/etStudentNumberField"
                android:layout_height="wrap_content" />

        <TextView
                android:id="@+id/tvTitleTwo"
                style="@style/TableRowStyle"
                android:layout_width="wrap_content"
                android:layout_column="1"
                android:layout_weight="1"
                android:background="@color/white"
                android:textAlignment="textStart"
                android:textSize="@dimen/_10ssp"
                android:text="Student Number"
                app:layout_constraintStart_toEndOf="@+id/tvTitleOne"
                app:layout_constraintBaseline_toBaselineOf="@+id/tvTitleOne"
                android:layout_height="wrap_content" />

        <TextView
                android:id="@+id/tvTitleThree"
                style="@style/TableRowStyle"
                android:layout_width="wrap_content"
                android:layout_column="2"
                android:layout_weight="1"
                android:background="@color/white"
                android:baselineAligned="false"
                android:textAlignment="textStart"
                android:textSize="@dimen/_10ssp"
                android:text="Graded"
                app:layout_constraintEnd_toStartOf="@+id/guideline3"
                app:layout_constraintBaseline_toBaselineOf="@+id/tvTitleTwo"
                app:layout_constraintStart_toEndOf="@+id/tvTitleTwo"
                android:layout_height="wrap_content" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="340dp"
            android:layout_height="350dp"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/spnrFilterBy"
            app:layout_constraintHorizontal_bias="0.545"
            android:layout_marginTop="60dp" />

</androidx.constraintlayout.widget.ConstraintLayout>