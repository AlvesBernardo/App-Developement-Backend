<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        app:cardElevation="0dp">

    <LinearLayout
            android:id="@+id/llStudentItems"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tvStudentName"
                style="@style/TableRowStyle"
                android:layout_width="wrap_content"
                android:layout_column="0"
                android:layout_weight="1"
                android:background="@color/white"
                android:textAlignment="center"
                android:textSize="8sp"
                android:text="Student Name"
                android:layout_height="wrap_content" />

        <TextView
                android:id="@+id/tvStudentNumber"
                style="@style/TableRowStyle"
                android:layout_width="wrap_content"
                android:layout_column="1"
                android:layout_weight="1"
                android:background="@color/white"
                android:textAlignment="center"
                android:textSize="8sp"
                android:text="Student Number"
                android:layout_height="wrap_content" />

        <ImageView
                android:id="@+id/tvGraded"
                style="@style/TableRowStyle"
                android:layout_width="6dp"
                android:layout_column="2"
                android:layout_weight="1"
                android:background="@color/white"
                android:textAlignment="center"
                android:textSize="8sp"
                android:src="@drawable/baseline_check_box_outline_blank_24"
                android:layout_height="match_parent" />

        <Button
                android:text="Change grade"
                android:layout_column="3"
                android:layout_width="34dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnChangeGrade"
                android:layout_weight="1"
                android:textSize="8sp"
                android:backgroundTint="#028577"
                android:textColor="#FFFFFF" />


    </LinearLayout>

</androidx.cardview.widget.CardView>